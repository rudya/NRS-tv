  {
    "name": "NBA Reddit Streams TV",
    "version": "0.5",
    "description": "Two clicks away from watching your favorite NBA reddit stream ",
    "permissions": ["activeTab","declarativeContent", "storage", "https://www.reddit.com/r/nbastreams/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/nrs16.png",
        "32": "images/nrs32.png",
        "48": "images/nrs48.png",
        "128": "images/nrs128.png"
      }
    },
    "icons": {
      "16": "images/nrs16.png",
      "32": "images/nrs32.png",
      "48": "images/nrs48.png",
      "128": "images/nrs128.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
  }